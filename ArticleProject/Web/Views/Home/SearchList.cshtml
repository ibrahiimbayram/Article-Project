@using Entity.DTOS.ArticleDtos
@{
    ViewData["Title"] = "SearchList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Makaleler</h2>
<br />

<div class="row">
    <div class="col-md-5">
        <a class="btn btn-primary btn-sm" asp-action="Create">Yeni Makale</a>
    </div>
    <div class="col-md-4"></div>
    <div class="col-md-3">
        <form asp-action="Search" method="post">
            <input class="text-sm-center" placeholder="Ara" type="search" id="search" name="search" />
            <input class="btn btn-secondary btn-sm pull-right" type="submit" name="TaskDate" id="TaskDate" value="Ara" />

        </form>
    </div>
</div>


<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Başlık</th>
            <th scope="col">Kısa Açıklama</th>
            <th scope="col">Yazar</th>
            <th scope="col">Tarih</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var it in Model)
        {
            <tr>
                <th scope="row">@it.Id</th>
                <td>@it.Title</td>
                <td>@it.ShortDescription</td>
                <td>@it.Writer</td>
                <td>@it.Date.ToString("dd.MM.yyyy")</td>
                <td><a class="btn btn-warning btn-sm" asp-action="ArticleDetails" asp-route-id="@it.Title">Detay</a></td>
                <td><a class="btn btn-danger btn-sm" asp-action="ArticleDelete" asp-route-id="@it.Id">Sil</a></td>
                <td><a class="btn btn-success btn-sm" asp-action="Update" asp-route-id="@it.Id">Düzenle</a></td>
            </tr>
        }

    </tbody>
</table>

