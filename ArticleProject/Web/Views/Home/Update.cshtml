@model Entity.DTOS.ArticleDtos.ArticleUpdateDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Makale Güncelle</h2>
<br />
<form class="form-group" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label class="form-control-sm"><h4>Başlık</h4></label>
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        <div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <label class="form-control-sm"><h4>Kısa Açıklama</h4></label>
        @Html.TextBoxFor(model => model.ShortDescription, new { @class = "form-control" })
        <div>
            <span asp-validation-for="ShortDescription" class="text-danger"></span>
        </div>
    </div>



    <div class="form-group">
        <label class="form-control-sm"><h4>İçerik</h4></label>
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
        <div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <label class="form-control-sm"><h4>Yazar</h4></label>
        @Html.TextBoxFor(model => model.Writer, new { @class = "form-control" })
        <div>
            <span asp-validation-for="Writer" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="ModelOnly"></div>
    <div class="card-footer">
        <input type="submit" class="btn btn-success pull-right" value="Kaydet" />
    </div>


    <br /><br /><br /><br />
</form>

